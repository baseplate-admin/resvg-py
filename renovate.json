{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "prConcurrentLimit": 100,
    "schedule": ["every friday"],
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchPackagePatterns": [".*"],
            "matchManagers": ["cargo"]
        },
        {
            "matchPackagePatterns": [".*"],
            "matchManagers": ["uv"]
        }
    ]
}
