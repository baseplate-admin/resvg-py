{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["mergeConfidence:all-badges", "config:recommended"],
    "prConcurrentLimit": 100,
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchManagers": ["cargo"],
            "matchPackageNames": ["/.*/"]
        },
        {
            "matchManagers": ["uv"],
            "matchPackageNames": ["/.*/"]
        }
    ]
}
